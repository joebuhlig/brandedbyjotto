<% if defined?(image) && image %>
  <%= image_tag image.attachment.url(:product), :itemprop => "image", class: "product_image" %>
<% else %>
  <%= large_image(@product, :itemprop => "image", class: "product_image") %>
<% end %>
<div class="cycle-img-button prev-img"><pre>&lt;</pre></div>
<div class="cycle-img-button next-img"><pre>&gt;</pre></div>
<div class="image-zoom-background"></div>
<div class="image-zoom-wrapper">
	<div class="image-zoom">
		<img src="" />
		<div>
			<div class="image-zoom-original exclude-spinner">
				<a target="_blank" href="">Click here for higher resolution</a>
			</div>
			<div class="image-zoom-close exclude-spinner"><a href="#">Close</a></div>
		</div>
	</div>
</div>